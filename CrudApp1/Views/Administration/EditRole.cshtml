@model CrudApp1.Models.Viewmodels.EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>
<div class="container p-3">

    <div class="row col-md-6">
        <form method="post">
            <div class="row mb-3">

                <input type="text" disabled class="form-control" asp-for="Id" />

            </div>

            <div class="row mb-3">
                <label class="form-label">Role Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
                @* add validations *@
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-3">

                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="GetRoles" class="btn btn-danger">Cancel</a>
            </div>

            <div class="card border ">
                <div class="card-header">
                    <h4>Users In The Role</h4>
                </div>
                <div class="card-body p-3 mb-3 bg-light border border-secondary border-1">
                    @if (Model.UsersInRole.Any())
                    {
                        foreach (var user in Model.UsersInRole)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5>No user in this role</h5>

                    }
                </div>
                <div class="form-group mb-3 p-3">

                    <a class="btn btn-primary" asp-action="EditUsersInRole" asp-route-roleid="@Model.Id"  >Add Or Remove Users</a>
                    
                </div>
            </div>






        </form>
    </div>






</div>


