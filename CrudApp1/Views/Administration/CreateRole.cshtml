@model CrudApp1.Models.Viewmodels.CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}


<div class="container">

    <h2 class="text-center p-5 bg-dark text-light">Create Role</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col">
                <div class="row mb-3">
                    <label class="form-label">Role Name</label>
                    <input type="text" class="form-control" id="name" asp-for="RoleName" />
                    @* add validations *@
                    <span class="text-danger" asp-validation-for="RoleName"></span>
                </div>
                <div class="row mb-3">

                    <input type="submit" class="btn btn-primary" value="Create" />
                </div>
            </div>
        </div>
    </form>
</div>

