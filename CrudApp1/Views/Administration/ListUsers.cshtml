@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "ListUsers";
}
<div class="container">
    <h1>All Users</h1>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Add New User</a>
</div>
<div class="container d-flex gap-2 mt-3">
    @if (Model.Any())
    {
        foreach (var u in Model)
        {
            <div class="card text-center">
                <div class="card-header">
                    @u.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@u.UserName</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    
                </div>
                <div class="card-footer text-muted">
                    
                    <form method="post">
                        <a asp-action="EditUsers" asp-controller="Administration" asp-route-id="@u.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@u.Id" class="btn btn-danger">Delete</a>

                    </form>
                </div>
            </div>
        }
    }

</div>
