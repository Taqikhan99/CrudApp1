@model List<CrudApp1.Models.Viewmodels.UserRolesViewModel>
@{
    ViewData["Title"] = "ManageUserRoles";
    var userid = ViewBag.userid;
}

<h1>ManageUserRoles</h1>

<div class="container p-2 mt-5">

    <form method="post">

        <div class="card">

            <div class="card-header">
                <h3>Add or Remove Roles For User</h3>
            </div>
            <div class="card-body">

                @* foreach user display the checkbox and name *@
                @for (var i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">

                        <input class="form-check-input" asp-for="@Model[i].IsSelected">
                        <label class="form-check-label">
                            @Model[i].RoleName
                        </label>


                    </div>
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                }

            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="EditUsers" asp-route-id="@userid" class="btn btn-danger">Cancel</a>
            </div>

        </div>

    </form>

</div>

