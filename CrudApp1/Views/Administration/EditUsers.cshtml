@model CrudApp1.Models.Viewmodels.EditUserViewModel
@{
    ViewData["Title"] = "EditUsers";
}

<h1>Edit User</h1>

<div class="container p-3">
    <form method="post">
        <div class="mb-3 row">
            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" oncopy="">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="UserName">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
        </div><div class="mb-3 row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div><div class="mb-3 row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="City">
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger">

        </div>

        <div class="row mb-3">

            <div class="col-sm-6">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="ListUsers" class="btn btn-danger">Cancel</a>
            </div>
        </div>

        @* Display User Roles *@
        <div class="card border ">
            <div class="card-header bg-light">
                <h4>User Roles</h4>
            </div>
            <div class="card-body p-3 mb-3  ">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5>No user in this role</h5>

                }
            </div>
            <div class="bg-light card-footer">

                <a class="btn btn-primary" asp-action="ManageUserRoles" asp-route-userid="@Model.Id">Manage User Roles</a>

            </div>
        </div>

        @* display user claims *@
       
        <div class="card border ">
            <div class="card-header bg-light">
                <h4>User Claims</h4>
            </div>
            <div class="card-body p-3 mb-3  ">
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <h5 class="card-title">@claim</h5>
                    }
                }
                else
                {
                    <h5>None at the moment</h5>

                }
            </div>
            <div class="bg-light card-footer">

                <a class="btn btn-primary" asp-action="ManageUserClaims" asp-route-userid="@Model.Id">Manage User Claims</a>

            </div>
        </div>

    </form>
</div>


