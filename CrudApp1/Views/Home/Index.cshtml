@model List<CrudApp1.Models.Viewmodels.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    table > tbody > tr {
        vertical-align: middle;
    }


</style>

<div class="text-center">
    <h1>
        Welcome To Crud App
    </h1>

    @if (Model != null && Model.Any())
    {
        <div class="container  p-3">

            <h3 class="text-center">PRODUCTS LIST</h3>

            <div class="d-flex gap-3 flex-wrap justify-content-center">
                @foreach (var p in Model)
                {   
                    <div class="card flex-sm-fill" style="width: 100%;max-width:22rem;height:450px;">
                        <img src="@p.ImageUrl" style="width:100%;height:250px;" alt="No Image found" />
                        <div class="card-body d-flex flex-column">
                            <h4 class="card-title">@p.Name</h4>
                            <h6 class="card-text">Price: @p.UnitPrice</h6>
                            @if (p.UnitInStock <= 0)
                            {
                                <p class="badge bg-primary w-50 mx-auto">Out Of Stock</p>
                            }
                            
                            <div class="mt-auto">
                                <a asp-action="Edit" asp-controller="Home" class="btn btn-primary" asp-route-id="@p.Id">Edit</a>
                                <a asp-action="Delete" asp-controller="Home" class="btn btn-danger" asp-route-id="@p.Id">Delete</a>
                            </div>
                        </div>
                    </div>


